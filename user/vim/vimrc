" }}}
" Text Width {{{
let &colorcolumn="80,".join(range(120,500),",")
"set textwidth=80
" }}}
" Autocmds {{{
autocmd BufRead,BufNewFile *.vp,*.fp,*.gp,*.vs,*.fs,*.gs,*.tcs,*.tes,*.cs,*.vert,*.frag,*.geom,*.tess,*.shd,*.gls,*.glsl set ft=glsl
autocmd BufRead,BufNewFile *.md              setlocal ft=markdown et ts=2 sw=2
autocmd BufRead,BufNewFile *.c,*.h,*.cc,*.hh setlocal cin
autocmd BufRead,BufNewFile *.js,*.css,*.html,*.php set expandtab softtabstop=2 shiftwidth=2
autocmd BufRead,BufNewFile *.go set syn=go
autocmd BufRead,BufNewFile *.py set noexpandtab ts=4 sw=4
autocmd BufNewFile *.pl         exe "normal iperl@\<CR>"
autocmd BufNewFile *.php        exe "normal iphp@\<Esc>2G"
autocmd BufNewFile *.html,*.htm exe "normal ihtml@\<Esc>gg/title>\<CR>f<"
autocmd BufNewFile *.c,*.cc     exe "normal i#include <stdio.h>\<CR>\<CR>int main(int argc, char **argv){\<Esc>0maoreturn 0;\<CR>}\<Esc>`a"
" }}}
