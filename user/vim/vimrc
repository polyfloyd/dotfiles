set hidden
set history=50
set hlsearch
set incsearch
set laststatus=2
set linebreak
set list
"set listchars=tab:\ ‚Ä•,trail:‚ãØ,precedes:‚Üê,extends:‚Üí
"set listchars=tab:‚ãÖ\ ,trail:‚ãØ,precedes:‚Üê,extends:‚Üí
set listchars=tab:‚îÇ\ ,trail:‚ãØ,precedes:‚Üê,extends:‚Üí
"set listchars=tab:‚ñà‚ñí,trail:‚ãØ,precedes:‚Üê,extends:‚Üí
"set listchars=tab:‚ñë\ ,trail:‚ãØ,precedes:‚Üê,extends:‚Üí
set nomodeline
