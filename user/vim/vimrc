" C / C++ {{{
inoreabbrev vimc@  /* vim: sw=4:ts=4:noet:fdm=marker */
inoreabbrev diec@ #define die(...) \<CR>do{ \<CR>fprintf(stderr, "[error] %s:%d: ", __FILE__, __LINE__); \<CR>fprintf(stderr, __VA_ARGS__); \<CR>fprintf(stderr, "\n"); \<CR>exit(1); \<CR>}while(0)<CR><CR>#define printd(...) \<CR>do{ \<CR>fprintf(stderr, "[debug] %s:%d: ", __FILE__, __LINE__); \<CR>fprintf(stderr, __VA_ARGS__); \<CR>fprintf(stderr, "\n"); \<CR>}while(0)<CR>
" }}}
